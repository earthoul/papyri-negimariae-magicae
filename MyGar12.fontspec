% Force using "original" EB Garamond
\defaultfontfeatures[My Gar 12]{
  Extension = .otf,
  UprightFont = EBGaramond12-Regular,
  ItalicFont = EBGaramond12-Italic,
  Contextuals = Alternate,
  Ligatures = {TeX, Historic},
  % Numbers = {Proportional, OldStyle}, % default
  CharacterVariant = 1, % long s
  ItalicFeatures = {
    CharacterVariant = {4}, % ampersand
  },
}
